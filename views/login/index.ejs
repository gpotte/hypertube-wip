<% include ../partials/header %>
<div class="container">
  <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
  <% } %>
  <% if (success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
  <% } %>
  <div class="jumbotron jumbotronWithForm">
    <h2>Log-In<h2>
    <form action="/login" method="POST" id="logInForm">
      <div class="form-group">
        <input type="text" name="username" placeholder="Username" class="form-control" required=true>
        <input type="password" name="password" placeholder="Password" class="form-control" required=true>
      </div>
      <input type='submit' class="btn btn-default btn-primary" value="Log In">
      <a class="btn btn-default btn-warning" href="/signin">Sign In</a>
      <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
      <a href="/auth/intra42" class="btn btn-primary">Intra 42</a>
    </form>
    <small><a href="/lost">Password Lost</a></small>
  </div>
</div>
<% include ../partials/footer %>
